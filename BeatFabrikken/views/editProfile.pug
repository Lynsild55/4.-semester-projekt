include includes/head
head
    script(src="/js/profilCore.js" defer)
    script(src="/js/validation.js" defer)

include includes/header
h2(class="text-center mb-4") Rediger Profil
div(class=" w-100 mx-auto" style="max-width: 300px")
    form(action="/profil/edit", id="redigeringsForm" method="POST" class="needs-validation" novalidate)

        div(class="form-floating mb-3")
            input(type="text", name="username", class="form-control", id="floatingUsername", placeholder="Username", value=username, required)
            label(for="floatingUsername") Brugernavn
            div(class="invalid-feedback visually-hidden" id="username-exists") Brugernavn findes allerede
        
        div(class="form-floating mb-3")
            input(type="email", name="email", class="form-control", id="floatingEmail", placeholder="Email", value=email, required)
            label(for="floatingEmail") E-mail

        div(class="form-floating mb-3")
            input(type="text", name="firstname", class="form-control", id="floatingFirstname", placeholder="First Name", value=firstname, required)
            label(for="floatingFirstname") First Name

        div(class="form-floating mb-3")
            input(type="text", name="lastname", class="form-control", id="floatingLastname", placeholder="Last Name", value=lastname, required)
            label(for="floatingLastname") Last Name
        
        div(class="form-floating mb-3")
            input(type="text", name="mobilnummer", class="form-control", id="floatingMobilnummer", placeholder="Mobilnummer", value=mobilnummer, required)
            label(for="floatingMobilnummer") Mobilnummer

            
        button(onclick="updateUser()", class="btn btn-primary w-100 py-2") Gem ændringer
    a(href='/profil/editPassword', class='btn btn-secondary mt-3 w-100') Ændre Password
include includes/footer
